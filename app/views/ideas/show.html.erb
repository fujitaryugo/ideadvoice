<div class="container">
	<div class="row">
		<div class="col-12">
			<div class="card" style="margin:1% auto; background-image: url(app/assets/images/order.jpg);">
				<div class="card-header" style="background-color:#ffa500;">
					<%= attachment_image_tag @order.client, :client_image, :fill,40,40, fallback:"user_no_image.jpeg",style:"border-radius: 50%;",size: "40x40"  %>
					<%= @order.client.group_name %>
				</div>
				<div class="card-body">
					<h3 class="card-title text-center"><%= @order.order_title %></h3>
				</div>
		    </div>
		</div>
		<div class="col-12">
			<div class="card" style="margin:1% auto;">
				<div class="card-header" style="background-color: #87ceeb">
					<%= attachment_image_tag @idea.user, :user_image, :fill,40,40, fallback:"user_no_image.jpeg",style:"border-radius: 50%;" %>
					<%= @idea.user.name %>
				</div>
				<div class="card-body">
					<h3 class="card-title text-center"><%= @idea.idea_title %></h3>
					<div class="card-text text-center" style="margin-bottom:2%;"><%= @idea.idea_text %></div>
					<div class="text-right font-italic text-muted small" >投稿日<%= @idea.created_at.strftime('%Y年%m月%d日') %></div>
				</div>
				<% if @idea.user_id == current_user.id %>
				<div class="card-footer">
					<button type="button" class="col-3 offset-2 btn btn-primary" data-backdrop="static" data-toggle="modal" data-target="#myModal">編集</button>
						<div class="modal fade"  id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
						  <div class="modal-dialog modal-lg" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <h5 class="modal-title" id="exampleModalLabel">ユーザー情報編集</h5>
						        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
						          <span aria-hidden="true">&times;</span>
						        </button>
						      </div>
						      <div class="modal-body">
				        			<%= form_for @idea ,url:order_idea_path(@order,@idea) do |f| %>
				        		<div class="form-group">
				        			<label>タイトル</label>
									<%= f.text_area :idea_title, class: "col" %>
								</div>
								<div class="form-group">
									<label>内容</label>
									<%= f.text_area :idea_text,class: "col" %>
								</div>
						      </div>
						      <div class="modal-footer">
						        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
						        <%= f.submit "編集",class: "btn btn-primary" %>
						        <% end %>
						      </div>
						    </div>
						  </div>
						</div>
					<!----->
					<%= link_to order_idea_path(@order,@idea),method: :delete,  class: "btn btn-danger col-3 offset-2", "data-confirm" => "本当に消しますか？" do %>
						削除
					<% end %>
				</div>
				<% end %>
				<div class="card-fotter container">
					<div class="row">
						<div class="col-1 offset-1">
							<% if @idea.favorited_by?(current_user) %>
							  <div>
							    <%= link_to order_idea_favorite_path(@order,@idea),method: :delete do %>
							      <i class="fa fa-thumbs-up fa-3x " aria-hidden="true" style="color: #87ceeb;"></i><br>
							    <% end %>
							  </div>
							<% else %>
							  <div>
							    <%= link_to order_idea_favorites_path(@order,@idea),:style=>"color:#777;text-decoration: none;", method: :post do %>
							      <i class="fa fa-thumbs-up fa-3x " aria-hidden="true"></i><br>
							    <% end %>
							  </div>
							<% end %>
						</div>
						<div class="formgroup col-8">
							<%= form_for @comment,url:order_idea_comments_path(@order,@idea) do |f| %>
							<%= f.text_area :comment_text, class: "form-control-lg",style:"width:100%;" ,placeholder:"コメント"%>
						</div>
						<div class="col-1">
							<%= f.submit "投稿",class: "btn btn-primary" %>
							<% end %>
						</div>
					</div>
					<div class="">
						<% @comments.each do |comment| %>
						<div class="col">
							<%= comment.user_id %>
							<%= attachment_image_tag comment.user, :user_image, :fill,40,40, fallback:"user_no_image.jpeg",style:"border-radius: 50%;" %>
							<%= comment.user.name %>
							<%= comment.comment_text %>
							</div>
						<% end %>
					</div>
				</div>
		    </div>
		</div>
	</div>
</div>