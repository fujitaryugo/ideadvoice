<div class="container-fluid">
<div class="row">
<div class="col border border-info rounded" style="margin-top: 5%;">
<h2 class="text-center text-info" style="margin-top: 5%;">新規登録</h2>
<div  style="margin: 5% auto;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group row" style="margin-top: 5%;">
    <label class="text-left text-info col-4 offset-2">団体名</label>
    <%= f.text_field :group_name,placeholder:"  団体名...", autofocus: true, autocomplete: "name",class: "text-info border border-info"%>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">担当者 姓</label>
    <%= f.text_field :last_name,placeholder:"  担当者 姓...",class: "text-info border border-info"%>
  </div>

  <div class="form-group row">
    <label  class="text-left text-info col-4 offset-2">担当者 名</label>
    <%= f.text_field :first_name,placeholder:"  担当者 名...",class: "text-info border border-info"%>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">電話番号</label>
    <%= f.telephone_field :phone_number,placeholder:"  電話番号...",size:15,maxlength:20,class: "text-info border border-info"  %>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">団体URL</label>
    <%= f.url_field :client_url,placeholder:"URL...",size:10,maxlength:15 ,class: "text-info border border-info "%>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">紹介文(300文字以内)</label>
    <%= f.text_area :introduction,placeholder:"紹介文 (300文字以内)...",class: "text-info border border-info "%>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">Eメール</label>
    <%= f.email_field :email,placeholder:"メールアドレス...", autofocus: true, autocomplete: "email" ,class: "text-info border border-info"%>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">パスワード(<%= @minimum_password_length %>文字以上)</label>
    <%= f.password_field :password,placeholder:"パスワード...", autocomplete: "new-password" ,class: "text-info border border-info"%>
  </div>

  <div class="form-group row">
    <label class="text-left text-info col-4 offset-2">パスワード(確認用)</label>
    <%= f.password_field :password_confirmation,placeholder:"パスワード確認...", autocomplete: "new-password" ,class: "text-info border border-info"%>
  </div>

  <div class="form-group row">
    <%= f.submit "新規登録" ,class: "btn btn-outline-info rounded-pill col-8 offset-2"%>
  </div>
<% end %>

</div>
  <div class="col-2 offset-5 text-center btn btn-outline-info rounded-pill" style="margin-bottom: 5%;">
  <%= render "clients/shared/links" %>
  </div>
</div>
</div>
