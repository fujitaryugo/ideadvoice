<div class="card">
	<div class="card-header text-center"><h3>MVP受賞、お礼の品詳細お知らせフォーム</h3></div>
	<div class="card-body">
		<%= form_for @present, url:clients_presents_path do |f| %>
		<%= f.text_area :message ,class: "col" %>
		<%= f.hidden_field :idea_id, :value => @idea.id %>
		<%= f.hidden_field :client_id, :value => current_client.id %>
		<%= f.hidden_field :user_id, :value => @idea.user.id %>
		<%= f.submit "送信" ,class: "btn btn-outline-warning" %>
		<% end %>
	</div>
</div>
