<h1>Clients#show</h1>
<p>Find me in app/views/clients/clients/show.html.erb</p>
<div class="container">
	<div class="row">
		<div class="col-2">
			<%= attachment_image_tag @client, :client_image, :fill,100,100, fallback:"client.jpeg", size:'100x100',style:"border-radius: 50%;" %>
		</div>
		<div class="col-8">
			<strong class="strong"><%= @client.group_name %></strong>
			<p><%= @client.introduction %></p>
			<p><%= raw Rinku.auto_link(h(@client.client_url)) %></p>
		</div>
		<div class="col">
			<button type="button" class="btn btn-primary" data-backdrop="static"  data-toggle="modal" data-target="#myModal">編集</button>
		</div>
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModalLabel">ユーザー情報編集</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			      <div class="modal-body">
						 <%= form_for @client, url:clients_client_path(:client_id => @client.id ) do |f| %>
						  <label>画像</label>

						  <%= f.attachment_field :client_image %>

						  <div class="form-group">
						    <label>団体名</label>
						    <%= f.text_field :group_name %>
						  </div>
						  <div class="form-group">
						    <label>担当者姓</label>
						    <%= f.text_field :last_name %>
						  </div>
						  <div class="form-group">
						    <label>担当者名</label>
						    <%= f.text_field :first_name %>
						  </div>
						  <div class="form-group">
						    <label>電話番号</label>
						    <%= f.text_field :phone_number %>
						  </div>
						  <div class="form-group">
						    <label>メールアドレス</label>
						    <%= f.text_field :email %>
						  </div>
						  <div class="form-group">
						    <label>団体URL</label>
						    <%= f.text_field :client_url %>
						  </div>
						  <div class="form-group">
						    <label>紹介文</label>
						    <%= f.text_area :introduction %>
						  </div>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
			        <%= f.submit "編集",class: "btn btn-primary" %>
			        <% end %>
			      </div>
			    </div>
			  </div>
			</div>
		</div>
		<div>
			<!-- タブ部分 -->
			<ul id="myTab" class="nav nav-tabs" role="tablist">
			  <li class="nav-item">
			    <a href="#home" id="home-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="home" aria-selected="true">投稿一覧</a>
			  </li>
			  <li class="nav-item">
			    <a href="#profile" id="profile-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="profile" aria-selected="false">依頼投稿</a>
			  </li>
			  <li class="nav-item">
			    <a href="#contact" id="contact-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="contact" aria-selected="false">おおお</a>
			  </li>
			</ul>

			<!-- パネル部分 -->
			<div id="myTabContent" class="tab-content mt-3">
			  <div id="home" class="tab-pane active" role="tabpanel" aria-labelledby="home-tab">
			  	<%= render 'clients/order'%>
			  </div>
			  <div id="profile" class="tab-pane" role="tabpanel" aria-labelledby="profile-tab">
			  	<%= render 'orders/new' %>
			  </div>
			  <div id="contact" class="tab-pane" role="tabpanel" aria-labelledby="contact-tab">
			  </div>
			</div>
		</div>
</div>