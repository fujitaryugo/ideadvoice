<div style="margin-bottom: 5%">
<%= form_for @order, url:clients_orders_path(:client_id => @client.id ) do |f| %>
<div class="card">
<div class="card-body">
	<div class="form-group">
	 <label class="text-info">依頼タイトル</label>
	 <%= f.text_field :order_title,class: "col border border-info"  %>
	</div>
	<div class="form-group">
	 <label class="text-info">内容</label>
	 <%= f.text_area :order_text,class: "col border border-info"  %>
	</div>
	<div class="form-group">
	 <label class="text-info">イメージ</label><br>
	 <%= f.attachment_field :order_image, fallback:"no_image.jpeg"  %>
	</div>
	<div class="form-group">
		 <label class="text-info">締切日</label>
		 <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
			 <%= f.text_field :deadline, class: 'datetimepicker-input border border-info', data: {target: "#datetimepicker4"}%>
		 	<div class="input-group-date" data-target="#datetimepicker4" data-toggle="datetimepicker">
			 <div class="input-group-text border border-info"><i class="fas fa-calendar-alt text-info"></i></div>
			</div>
		</div>
	</div>
	<div class="form-group">
	 <label class="text-info">報酬内容</label>
	 <%= f.text_area :reward_content,class: "col border border-info" %>
	</div>
	<%= f.submit "投稿",class: "btn btn-info col" %>
	</div>
</div>
</div>
<% end %>
</div>
