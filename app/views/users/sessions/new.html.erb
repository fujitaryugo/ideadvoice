<div class="container">
<div class="row">
<div class="col border border-success rounded" style="margin-top: 5%;">
<h2 class="text-center text-success" style="margin-top: 5%;">ログイン</h2>
<div  style="margin: 5% auto;">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row" style="margin-top: 5%;">
    <label class="text-left text-success col-4 offset-2">Eメール</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "text-success border border-success" %>
  </div>

  <div class="form-group row">
    <label class="text-left text-success col-4 offset-2">パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password",class: "text-success border border-success" %>
  </div>

 <div class="form-group text-center text-success">
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me ,class: "text-success"%>
      <%= f.label :remember_me ,class: "text-success"%>
    </div>
  <% end %>
</div>

  <div class="actions">
    <%= f.submit "ログイン" ,class: "btn btn-outline-success rounded-pill col-8 offset-2"%>
  </div>
<% end %>
</div>
 <div class="col-4 offset-4 text-center  rounded-pill" style="margin-bottom: 5%;">
  <%= render "users/shared/links" %>
 </div>
</div>
</div>
</div>

