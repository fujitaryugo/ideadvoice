<h1>Orders#show</h1>
<p>Find me in app/views/orders/show.html.erb</p>
<div class="container" >

	<!--タブ-->
	<ul id="myTab" class="nav nav-tabs" role="tablist">
	  <li class="nav-item">
	    <a href="#home" id="home-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="home" aria-selected="true">依頼</a>
	  </li>
	  <li class="nav-item">
	    <a href="#contact" id="contact-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="contact" aria-selected="false">アイデア一覧</a>
	  </li>
	</ul>
	<!--パネル-->
	<div id="myTabContent" class="tab-content mt-3">
		  <div id="home" class="tab-pane active" role="tabpanel" aria-labelledby="home-tab">
			<div class="container">
	  		<div class="row">
				<div class="col-xl-12">
					<div class="card" style="margin:1% auto; background-image: url(app/assets/images/order.jpg);">
						<div class="card-header" style="background-color:#ffa500">
							<%= attachment_image_tag @order.client, :client_image, :fill,20,20, fallback:"user_no_image.jpeg", size:'20x20',style:"border-radius: 50%;" %>
							<%= @order.client.group_name %>
						</div>
						<div class="card-body">
							<h3 class="card-title text-center"><%= @order.order_title %></h3>
							<div class="text-center">どうして</div>
							<div class="card-text text-center" style="margin-bottom:2%;"><%= @order.order_text %></div>
							<div>
								<% attachment_image_tag @order, :order_image, :fill,200,200, fallback:"no_image.jpeg", size:'200x200' %>
							</div>
							<div class="text-center">
								募集締切<br>
								<%= @order.deadline %>
							</div>
						</div>
						<div class="card-body">
							<p class="text-center">お礼</p>
							<div class="text-center">
							<%= attachment_image_tag @order, :reward_image, size:'100x100' %>
							<%= @order.reward_content %>
							</div>
						</div>
				    </div>
				</div>
			</div>
			<div class="row">
				<% @ideas.each do |idea| %>
				<div class="col-12 col-xl-6">
					<div class="card" style="margin:1% auto;">
						<div class="card-header" style="background-color: #87ceeb">
							<%= attachment_image_tag idea.user, :user_image, :fill,20,20, fallback:"user_no_image.jpeg", size:'20x20',style:"border-radius: 50%;" %>
							<%= idea.user.name %>
						</div>
						<div class="card-body">
							<h3 class="card-title text-center"><%= idea.idea_title %></h3>
							<div class="card-text text-center" style="margin-bottom:2%;"><%= idea.idea_text %></div>
							<div class="text-right font-italic text-muted small" >投稿日<%= idea.created_at.strftime('%Y年%m月%d日') %></div>
						</div>
				    </div>
				</div>
				<% end %>
			</div>
			</div>
		  </div>
		  <div id="contact" class="tab-pane" role="tabpanel" aria-labelledby="contact-tab">
		  	<%= form_for @idea, url:order_ideas_path(order_id: @order) do |f| %>
		  	<div>
		  		<label>タイトル</label>
		  		<%= f.text_field :idea_title %>
		  	</div>
		  	<div>
		  		<label>内容</label>
		  		<%= f.text_area :idea_text %>
		  	</div>
		  	<%= f.submit %>
		  	<% end %>
		  </div>
	</div>
</div>