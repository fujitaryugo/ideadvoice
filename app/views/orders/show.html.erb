<h1>Orders#show</h1>
<p>Find me in app/views/orders/show.html.erb</p>
<div class="container">

	<!--タブ-->
	<ul id="myTab" class="nav nav-tabs" role="tablist">
	  <li class="nav-item">
	    <a href="#home" id="home-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="home" aria-selected="true">依頼</a>
	  </li>
	  <li class="nav-item">
	    <a href="#contact" id="contact-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="contact" aria-selected="false">アイデア一覧</a>
	  </li>
	</ul>
	<!--パネル-->
	<div id="myTabContent" class="tab-content mt-3">
		  <div id="home" class="tab-pane active" role="tabpanel" aria-labelledby="home-tab">
			<div class="container">
	  		<div class="row">
					<%= attachment_image_tag @order, :order_image, :fill,200,200, fallback:"no_image.jpeg", size:'200x200' %>
					<%= @order.order_title %>
					<%= @order.order_text %>
					<%= @order.deadline %>
					<%= attachment_image_tag @order, :reward_image, size:'200x200' %>
					<%= @order.reward_content %>
			</div>
			</div>
		  </div>
		  <div id="contact" class="tab-pane" role="tabpanel" aria-labelledby="contact-tab">
		  	<%= form_for @idea, url:order_ideas_path(order_id: @order) do |f| %>
		  	<div>
		  		<label>タイトル</label>
		  		<%= f.text_field :idea_title %>
		  	</div>
		  	<div>
		  		<label>内容</label>
		  		<%= f.text_area :idea_text %>
		  	</div>
		  	<%= f.submit %>
		  	<% end %>
		  	<% @ideas.each do |idea| %>
		  	<div style="background-color: #bbe2f1; margin-bottom:2%;">
		  		<strong>タイトル</strong>
			  	<%= idea.idea_title %><br>
			  	<strong>内容</strong>
			  	<%= idea.idea_text %><br>
			  	<strong>order_id</strong>
			  	<%= idea.order_id %><br>
			  	<strong>idea.id</strong>
			  	<%= idea.id %><br>
		  	</div>
		  	<% end %>
		  </div>
	</div>
</div>