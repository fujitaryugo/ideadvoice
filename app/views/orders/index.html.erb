<div class="container-fluid">
	<div class="row space">
		<div class="col-12" style="margin-bottom: 2%;">
		<div class="card " style="border-color: #30c5bb;">
			<div class="card-header" style="background-color: #aeefdd; border-color: #30c5bb;">
				<h2 class="text-center" style="color:  #2d566b;"><i class="fas fa-rocket"></i>依頼一覧</h2>
			</div>
			<div class="card-body text-center" style="border-color: #30c5bb;" >
				<span>「<i class="fas fa-pencil-alt" style="color:#30c5bb; background-color: white; ">投稿する！</i>」から投稿してみましょう</span>
			</div>
		</div>
		</div>
	</div>


	<div class="container-fluid">
		<ul id="myTab" class="nav nav-tabs" role="tablist">
		  <li class="nav-item">
		    <a href="#home" id="home-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="home" aria-selected="true" style="color: #2d566b;">現在募集中</a>
		  </li>
		  <li class="nav-item">
		    <a href="#profile" id="profile-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="profile" aria-selected="false" style="color: #2d566b;">全て</a>
		  </li>
		</ul>

		<!-- パネル部分 -->
		<div id="myTabContent" class="tab-content mt-3">
		  <div id="home" class="tab-pane active" role="tabpanel" aria-labelledby="home-tab">
		  <div class="row">
				<% @orders_now.each do |order| %>
				<div class="col-12 col-lg-6">
				<div class="card" style="margin:1% auto; border-color:#fd9900;">
					<div class="card-header" style="background-color: #fed9a0; border-color:#fd9900;">
					<%= link_to client_path(order.client_id),:style=>"color:  #2d566b;text-decoration: none;" do %>
						<%= attachment_image_tag order.client, :client_image, :fill,40,40, fallback:"/images/client_no_image.jpeg",size: "40x40",style:"border-radius: 50%;" %>
						<%= order.client.group_name %>
					<% end %>
					</div>
					<div class="card-body text-center" >
						<h4 class="card-title" style="color:  #2d566b;">
							<%= link_to order_path(order.id) ,:style=>"color: #2d566b;" do %>
							<%= order.order_title %>
							<% end %>
						</h4>
						<div class="under-title"></div>
						<strong style="margin:2% 0;">募集締切<%= order.deadline.strftime('%Y年%m月%d日') %></strong>
						<div class="under-title"></div>
						<div class="text-center text-truncate ">
							<span class="under-title ">お礼の品</span>
								<%= simple_format(order.reward_content) %>
						</div>
						<div class="text-right text-muted small font-italic">
							<span>投稿日</span>
								<%= order.created_at.strftime('%Y年%m月%d日') %>
						</div>
					</div>
					<div class="card-footer clearfix text-muted small text-right">
						<%= link_to order_path(order.id) ,:style=>"text-decoration: none;" do %>
						<i class="fas fa-pencil-alt" style="color:#30c5bb;">投稿する!</i>
						<% end %>
						<span class="float-left">アイデア<%= order.ideas.count %>件</span>
					</div>
			    </div>
				</div>
		    	<% end %>
		    </div>
		  	</div>
		  	<div id="profile" class="tab-pane" role="tabpanel" aria-labelledby="profile-tab">
		  	<div class="row">
				<% @orders.each do |order| %>
				<div class="col-12 col-lg-6">
				<div class="card" style="margin:1% auto; border-color:#fd9900;">
					<div class="card-header" style="background-color: #fed9a0; border-color:#fd9900;">
					<%= link_to client_path(order.client_id),:style=>"color:  #2d566b;text-decoration: none;" do %>
						<%= attachment_image_tag order.client, :client_image, :fill,40,40, fallback:"/images/client_no_image.jpeg",size: "40x40",style:"border-radius: 50%;" %>
						<%= order.client.group_name %>
					<% end %>
					</div>
					<div class="card-body text-center" >
						<h4 class="card-title" style="color:  #2d566b;">
							<%= link_to order_path(order.id) ,:style=>"color: #2d566b;" do %>
							<%= order.order_title %>
							<% end %>
						</h4>
						<div class="under-title"></div>
						<strong style="margin:2% 0;">募集締切<%= order.deadline.strftime('%Y年%m月%d日') %></strong>
						<div class="under-title"></div>
						<div class="text-center text-truncate ">
							<span class="under-title ">お礼の品</span>
								<%= simple_format(order.reward_content) %>
						</div>
						<div class="text-right text-muted small font-italic">
							<span>投稿日</span>
								<%= order.created_at.strftime('%Y年%m月%d日') %>
						</div>
					</div>
					<div class="card-footer clearfix text-muted small text-right">
					<% if order.deadline >= Date.today %>
						<%= link_to order_path(order.id) ,:style=>"text-decoration: none;" do %>
						<i class="fas fa-pencil-alt" style="color:#30c5bb;">投稿する!</i>
						<% end %>
					<% else %>
						<span>募集は終了しました！</span>
					<% end %>
						<span class="float-left">アイデア<%= order.ideas.count %>件</span>
					</div>
			    </div>
				</div>
			    <% end %>
			</div>
		  	</div>

		 </div>
		</div>


	</div>
</div>

